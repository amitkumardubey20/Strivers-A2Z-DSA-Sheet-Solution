public class Solution {
    public static Node constructLL(int []arr) {
        // Write your code here
         Node head=new Node(arr[0]);
         Node tail=head;

         for(int i=1;i<arr.length;i++){

             Node x=new Node(arr[i]);
             tail.next=x;
             tail=x;
             

         }
         return head;

    }
}
